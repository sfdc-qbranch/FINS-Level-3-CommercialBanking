<aura:component implements="flexipage:availableForAllPageTypes" access="global">
    
    
    
    <aura:attribute name="Title" type="String" default="Upcoming Quarterly Reviews (3)"/>
    <aura:attribute name="Icon" type="String" default="standard:event"/>
    <aura:attribute name="ViewAllLink" type="String" default="/001/o"/>
    
    <aura:attribute name="Text1" type="String" default="Rachel Adams"/>
    <aura:attribute name="Link1" type="String" default="/001Dn000007IdUW"/>
    <aura:attribute name="Subtext1" type="String" default="Existing Client"/>
    <aura:attribute name="SideText1" type="String" default="Mar 29, 2017"/>
    
    <aura:attribute name="Text2" type="String" default=""/>
    <aura:attribute name="Link2" type="String"/>
    <aura:attribute name="Subtext2" type="String"/>
    <aura:attribute name="SideText2" type="String"/>
    
