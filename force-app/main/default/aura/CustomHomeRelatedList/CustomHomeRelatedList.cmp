    <lightning:card title="{!v.Title}" iconName="{!v.Icon}" footer="View All">

            <div class="slds-card__body">
                <ul>
                	<li class="{!v.Text1 == null ? 'slds-hide' : 'slds-tile slds-m-vertical--small slds-m-horizontal--large'}">
                        <div class="slds-media__body">
                        	<div class="slds-grid slds-grid--align-spread slds-has-flexi-truncate">
                            	<p class="tile__title slds-truncate slds-tile__title"><a href="{!v.Link1}">{!v.Text1}</a></p>
                                <div>
                                	<p class="slds-truncate">{!v.SideText1}</p>
                                </div>
                            </div>
                        </div>
                        <div class="slds-tile__detail slds-list--horizontal slds-has-dividers slds-text-body--small">
